{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "target": "es5",
     "module": "commonjs",
     "moduleResolution": "node",
     "esModuleInterop": true,
     "rootDir": "./src",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "typeRoots": ["./node_modules/@types", "src/types"]

  },
  
  "include": ["src/**/*ts"],
  "exclude": ["node_modules"]
}